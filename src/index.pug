extends pug/layout/head

block variables
  - var pageTitle = 'InMove Skates'

//- Main page mixins
mixin advantagesItem(title, description)
  li.advantages-list__item.advantages-item
    .advantages-item__title= title
    span.advantages-item__description= description

mixin categoriesLinks(name)
  a(href="#").button.categories-links__item= name

mixin productCard(className, product, tag)
  div(class= className).product
    button.product-zoom.product__zoom
      img(src="./images/zoom.svg" alt="Zoom icon").product-zoom__icon
    if (tag)
      span.product__tag= product.tag
    img(src="./images/" + product.image).product__image
    h3.product__title= product.name
    span.product__description= product.description
    .product-pricing
      span.product-pricing__price= product.price
      button.product-pricing__button
        svg.product-pricing__cart
          use(xlink:href="./images/sprites.svg#cart")
    .product-sizes.product-sizes_hidden
      p.product-sizes__text
        | Sizes: 
      .product-sizes__button
        button.product-sizes__item 38
        button.product-sizes__item 39.5
        button.product-sizes__item.product-sizes__item_disabled 40
        button.product-sizes__item 40.5
        button.product-sizes__item.product-sizes__item_disabled 41
        button.product-sizes__item 41.5

